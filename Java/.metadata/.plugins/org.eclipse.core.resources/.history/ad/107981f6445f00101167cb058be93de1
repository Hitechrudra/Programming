public class Circulos {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		float radio; 
		StdOut.println("Ingrese el radio: ");
		radio=StdIn.readInt();
		
		StdOut.println("Perimetro:" + 2*radio*Math.PI);
		StdOut.println("Area: " + Math.PI*radio*radio );
		


	}

}
